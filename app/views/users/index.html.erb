<div class="page-header">
  <h1>
    All Students
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Skills</th>
        <th>Teams</th>
        <th>Action</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td>
          <a href="/users/<%= user.id %>"><%= user.dropdown_name %></a>
        </td>
        <td>
          <% user.skills.each do |skill| %>
            <p><a href="/skills/<%= skill.id %>"><%= skill.skill %></a></p>
          <% end %>
        </td>
        <td>
          <% user.teams.each do |team| %>
            <p><a href="/teams/<%= team.id %>"><%= team.team_name %></a></p>
          <% end %>
        </td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
