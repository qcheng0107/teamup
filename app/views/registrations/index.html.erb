<div class="page-header">
  <h1>
    My Registrations
    <a href="/registrations/new" class="btn btn-lg btn-success">New Registration</a>
  </h1>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Students</th>
        <th>Registered Sessions</th>
        <th>Drop Session</th>
      </tr>

      <% current_user.registrations.each do |registration| %>
      <tr>
        <td>
            <a href="/users/<%= registration.user.id %>">
              <%= registration.user.dropdown_name %>
            </a>
        </td>
        <td>
          <% if registration.session.present? %>
            <a href="/sessions/<%= registration.session.id %>">
              <%= registration.session.dropdown_text %>
            </a>
          <% end %>
        </td>
        
        <td>
          <% if current_user == registration.user %>
            <a href="/delete_registration/<%= registration.id %>" class="btn btn-danger" rel="nofollow">Drop</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @registrations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
