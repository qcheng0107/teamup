<!-- Validation failure messages -->
<% if @session.errors.any? %>
  <% @session.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Session</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_session" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for quarter -->
      <div class="form-group">
        <label for="quarter" class="control-label">
          Quarter
        </label>

        <input type="text" id="quarter" name="quarter" placeholder="Quarter" class="form-control" value="<%= @session.quarter %>">
      </div>

      <!-- Label and input for course_name -->
      <div class="form-group">
        <label for="course_name" class="control-label">
          Course name
        </label>

        <input type="text" id="course_name" name="course_name" placeholder="Course name" class="form-control" value="<%= @session.course_name %>">
      </div>

      <button class="btn btn-success">
        Create Session
      </button>
      or
      <a href="/sessions">Cancel</a>
    </form>
  </div>
</div>
