<div class="page-header">
  <h3>Member #<%= @member.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Student</dt>
      <dd>
        <% if @member.user.present? %>
          <a href="/users/<%= @member.user_id %>">
            <%= @member.user.dropdown_name %>
          </a>
        <% end %>
      </dd>

      <dt>Team</dt>
      <dd>
        <% if @member.team.present? %>
          <a href="/teams/<%= @member.team_id %>">
            <%= @member.team.team_name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/members" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @member.user %>
        <a href="/members/<%= @member.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_member/<%= @member.id %>" class="btn btn-danger" rel="nofollow">
          Quit
        </a>
      <% end %>
    </div>
  </div>
</div>
