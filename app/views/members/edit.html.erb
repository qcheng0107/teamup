<!-- Validation failure messages -->
<% if @member.errors.any? %>
  <% @member.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Membership #<%= @member.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_member/<%= @member.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for session_id -->
      <div class="form-group">
        <label for="team_id" class="control-label">
          Team
        </label>

        <%= select_tag(:team_id, options_from_collection_for_select(Team.all, :id, :team_name), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Membership
      </button>
      or
      <a href="/members/<%= @member.id %>">Cancel</a>
    </form>
  </div>
</div>
