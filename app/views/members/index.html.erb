<div class="page-header">
  <h1>
    My Memberships
    <a href="/members/new" class="btn btn-lg btn-success">New member</a>
  </h1>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Team</th>
        <th>Session</th>
        <th>Actions</th>
      </tr>

      <% current_user.members.each do |member| %>
      <tr>
        <td>
          <% if member.team.present? %>
            <a href="/teams/<%= member.team.id %>">
              <%= member.team.team_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if member.team.present? %>
            <a href="/sessions/<%= member.team.session.id %>">
              <%= member.team.session.dropdown_text %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/members/<%= member.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == member.user %>
            <a href="/members/<%= member.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_member/<%= member.id %>" class="btn btn-danger" rel="nofollow">Quit</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @members, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
