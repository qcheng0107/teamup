<!-- Validation failure messages -->
<% if @member.errors.any? %>
  <% @member.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Membership</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_member" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for session_id -->
      <div class="form-group">
        <label for="team_id" class="control-label">
          Team
        </label>

        <%= select_tag(:team_id, options_from_collection_for_select(Team.all, :id, :team_name), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Join team
      </button>
      or
      <a href="/members">Cancel</a>
    </form>
  </div>
</div>

<div class="page-header">
  <h3>Add Team</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_team" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for session_id -->
      <div class="form-group">
        <label for="session_id" class="control-label">
          Session
        </label>

        <%= select_tag(:session_id, options_from_collection_for_select(Session.all, :id, :dropdown_text), :class => "form-control") %>
      </div>

      <!-- Label and input for team_name -->
      <div class="form-group">
        <label for="team_name" class="control-label">
          Team name
        </label>

        <input type="text" id="team_name" name="team_name" placeholder="Team name" class="form-control" value="">
      </div>

      <!-- Label and input for user_id -->
        <input name="member_id" type="hidden" value="<%= current_user.id %>">

      <button class="btn btn-success">
        Create Team
      </button>
      or
      <a href="/teams">Cancel</a>
    </form>
  </div>
</div>
