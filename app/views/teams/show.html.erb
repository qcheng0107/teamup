<div class="page-header">
  <h3>Team #<%= @team.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Session</dt>
      <dd>
        <% if @team.session.present? %>
          <a href="/sessions/<%= @team.session_id %>">
            <%= @team.session.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Team name</dt>
      <dd><%= @team.team_name %></dd>

      <dt>User</dt>
      <dd>
        <% if @team.user.present? %>
          <a href="/users/<%= @team.user_id %>">
            <%= @team.user.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/teams" class="btn btn-primary">
        Back
      </a>
      <a href="/teams/<%= @team.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_team/<%= @team.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
