<div class="page-header">
  <h3>Team #<%= @team.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Session</dt>
      <dd>
        <% if @team.session.present? %>
          <a href="/sessions/<%= @team.session_id %>">
            <%= @team.session.dropdown_text %>
          </a>
        <% end %>
      </dd>

      <dt>Team name</dt>
      <dd><%= @team.team_name %></dd>

      <dt>Team Members</dt>
      <dd>
        <% @team.users.each do |user| %>
          <a href="/users/<%= user.id %>">
            <%= user.first_name %> <%= user.last_name %>
          </a>
        <% end %>
      </dd>
    </dl>

<% member = Member.find_by(team_id: @team.id, user_id: current_user.id) %>
  <% unless member.present? %>
    <form action="/create_member" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for team_id -->
      <input type="hidden" name="team_id" value="<%= @team.id %>">

      <button class="btn btn-success">
        Join team
      </button>
  <% end %>

    <div class="btn-group btn-group-justified">
      <a href="/teams" class="btn btn-primary">
        Back
      </a>
      <a href="/teams/<%= @team.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_team/<%= @team.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
