<div class="page-header">
  <h1>
    Teams
    <a href="/teams/new" class="btn btn-lg btn-success">New Team</a>
  </h1>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Session</th>
        <th>Team name</th>
        <th>Members</th>
        <th>Actions</th>
      </tr>

      <% Team.all.each do |team| %>
      <tr>
        <td>
          <a href="/sessions/<%= team.session.id %>">
            <%= team.session.dropdown_text %> 
          </a>
        </td>
        <td>
          <a href="/teams/<%= team.id %>">
            <%= team.team_name %>
          </a>
        </td>

        <td>
            <% team.users.each do |user| %>
            <a href="/users/<%= user.id %>">
              <%= user.first_name %> <%= user.last_name %>
            </a>
            <% end %>
        </td>
        <td>
          <a href="/teams/<%= team.id %>" class="btn btn-primary">Show</a>
          <% member = Member.find_by(team_id: team.id, user_id: current_user.id) %>
          <% if member.present? %>
            <a href="/teams/<%= team.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_team/<%= team.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @teams, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
