<!-- Validation failure messages -->
<% if @skill.errors.any? %>
  <% @skill.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Skill</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_skill" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for skill -->
      <div class="form-group">
        <label for="skill" class="control-label">
          Skill
        </label>

        <input type="text" id="skill" name="skill" placeholder="Skill" class="form-control" value="<%= @skill.skill %>">
      </div>

      <button class="btn btn-success">
        Create Skill
      </button>
      or
      <a href="/skills">Cancel</a>
    </form>
  </div>
</div>
