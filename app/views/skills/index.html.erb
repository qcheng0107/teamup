<div class="page-header">
  <h1>
    Skills
    <a href="/skills/new" class="btn btn-lg btn-success">New Skill</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Skill</th>
        <th>Actions</th>
      </tr>

      <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.user_id %></td>
        <td><%= skill.skill %></td>
        <td>
          <a href="/skills/<%= skill.id %>" class="btn btn-primary">Show</a>
          <a href="/skills/<%= skill.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_skill/<%= skill.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
